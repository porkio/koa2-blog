<%- include('layout/_header') %>
<div class="container">
  <div id="article-detail">
    <%- article.content %>
  </div>
</div>
<script type="module">
  import {
    utils
  } from "./scripts/utils.js";
  document.addEventListener('readystatechange', e => {
    if (document.readyState === 'complete') {
      const linkToBD = document.querySelector('#linkToBD')
      linkToBD.addEventListener('click', e => {
        e.preventDefault()
        const res = utils.copyText('zhaoxu123')
        res && utils.showMessage({
          title: '复制成功',
          icon: 'Success'
        })
        setTimeout(() => {
          location.href = e.target.href
        }, 2000)
      }, false)
    }



  }, false)

</script>
<%- include('layout/_footer') %>
